{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
      "@condition/*": ["condition/*"],
      "@entity/*": ["entity/*"],
      "@query/*": ["query/*"],
      "@scan/*": ["scan/*"],
      "@settings/*": ["settings/*"],
      "@storage/*": ["storage/*"],
      "@table/*": ["table/*"],
      "@transactionGet/*": ["transactionGet/*"],
      "@transactionWrite/*": ["transactionWrite/*"],
      "@decorators/*": ["decorators/*"],
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "examples"
  ],
}