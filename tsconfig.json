{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
      "@Condition/*": ["Condition/*"],
      "@Entity/*": ["Entity/*"],
      "@Query/*": ["Query/*"],
      "@Scan/*": ["Scan/*"],
      "@Settings/*": ["Settings/*"],
      "@Storage/*": ["Storage/*"],
      "@Table/*": ["Table/*"],
      "@Transaction/*": ["Transaction/*"],
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "examples"
  ],
}