{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}