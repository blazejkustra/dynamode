{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
      "@condition/*": ["Condition/*"],
      "@entity/*": ["Entity/*"],
      "@query/*": ["Query/*"],
      "@scan/*": ["Scan/*"],
      "@settings/*": ["Settings/*"],
      "@storage/*": ["Storage/*"],
      "@table/*": ["Table/*"],
      "@transaction/*": ["Transaction/*"],
      "@decorators/*": ["decorators/*"],
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "examples"
  ],
}