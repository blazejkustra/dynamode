{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
      "@aws/*": ["aws/*"],
      "@Model/*": ["Model/*"],
      "@Query/*": ["Query/*"],
      "@Table/*": ["Table/*"],
      "@Transaction/*": ["Transaction/*"],
      "@Scan/*": ["Scan/*"],
      "@Condition/*": ["Condition/*"],
  },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
}