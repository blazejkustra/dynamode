{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "examples",
    "tests",
  ],
}